{
  "name": "backend",
  "version": "1.0.0",
  "description": "bob2.0.0 backend",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "cross-env nodemon index.js",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand ./tests",
    "test:all": "npm run test && cd frontend && CI=true npm test && cd ..",
    "lint": "eslint .",
    "build:ui": "rm -rf build && cd frontend && npm run build --prod && cp -r build ..",
    "deploy": "git push heroku master",
    "deploy:dev": "git push heroku_dev master",
    "deploy:full:dev": "npm run test:all && npm run build:ui && git add . && git commit -m uibuild && git push && npm run deploy:dev"
  },
  "author": "Riikka Korolainen",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.10.11"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "eslint": "^7.13.0",
    "jest": "^26.6.1",
    "nodemon": "^2.0.5",
    "supertest": "^6.0.0"
  }
}
